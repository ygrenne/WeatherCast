@model IEnumerable<Weather.Models.WeatherDaily.City>

@using (Html.BeginForm("Detail", "Weather"))
{
    <div class="row margin-top-25">
        <div class="col-md-6">
            <div class="input-group">
                <input type="text" name="city" placeholder="Введіть місто" class="form-control" required=""/>
                <div class="input-group-btn">
                    <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-search"></span></button>
                </div>
            </div>
            <div class="city">
                @foreach (var city in Model)
                {
                    @Html.ActionLink(city.UaName, "Detail", "Weather", new { city = city.Name }, null)
                }
            </div>
        </div>
    </div>
}




